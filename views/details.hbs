<div class="d-flex justify-content-center align-items-center">
    <div class="col-12 d-flex justify-content-center  bg-gradient shadow rounded p-4 col-sm-8">
        <div class="row col-12">
        <hr>
            <div class="d-flex col-12 shadow py-3">
                <div class="d-flex justify-content-center align-items-center col-3">
                        <img src="{{movie.image}}" class="card-img-top" alt="...">
                </div>
                <div class="col-9">
                    <div class="px-5 py-3">
                        <a href="/movies" class="btn btn-primary">Go Back</a>
                            <h1 class="card-title">{{movie.title}}</h1>
                            <h3 class="card-title">Director: {{movie.director}}</h3>
                            <h4>Stars:</h4>
                            <ul>
                                {{#each movie.stars as |star|}}
                                    <li>{{star}}</li>
                                {{/each}}
                            </ul>
                            <p>{{movie.description}}</p>
                            <ul class="list-group list-group-horizontal">
                            {{#each movie.showtimes as |showtime|}}
                                <li class="list-group-item">{{showtime}}</li>
                            {{/each}}
                            </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>